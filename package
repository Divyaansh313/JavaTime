//in the package folder create a java file and compile it 

package  Balance;

public class Account
{
	public void Display_Balance(double balance)
	{
	System.out.println("The balance is: " + balance);
	}
}


// now create a java project and import the class in package

import java.util.*;
import Balance.*;

public class MyAccount
{
	public static void main(String args[])
	{
	Account Account1 = new Account();
	Account1.Display_Balance(50000.00);

	}
}

